def river_path():
    print("You stumble upon a wide river blocking your path.")
    print("1. Build a raft to cross the river.")
    print("2. Follow the river downstream.")
    choice = input("Enter 1 or 2: ")
    if choice == '1':
        print("Your raft holds steady, and you cross safely.")
    else:
        print("You find a hidden waterfall leading to a secret cave!")
